<div class="title">
  <h1>Eat Da Burger</h1>
</div>

<div class="tables">
  <div class="remaining burgers">
    <ul>
      {{#each burger_data}}
      {{#unless this.devoured}}
      <form class="devourButton" action="/update" method="post">
        <li>{{this.burger_name}}</li>
        <button type='submit' value={{this.id}} name='burger'>Devour</button>
      </form>
      {{/unless}}
      {{/each}}
      <br><br>
      <form class="" action="/add" method="POST">
        <input type="text" name="burger" placeholder="burger name">
        <button type="submit">add</button>
      </form>
    </ul>
  </div>

  <div class="eaten burgers">
    <ul>
      {{#each burger_data}}
      {{#if this.devoured}}
      <li>{{this.burger_name}}</li>
      {{/if}}
      {{/each}}
    </ul>
  </div>
</div>
